<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.8" >
    
    <ImageView
        android:id="@+id/select_location_map_info_window_chosen_icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:contentDescription="@string/select_location_map_info_window_chosen_icon"
        android:src="@android:drawable/star_off" />
    
	<LinearLayout 
	    android:padding="10dp"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"  >

	    <TextView
	        android:id="@+id/select_location_map_info_window_stop_name_label"
	        android:textIsSelectable="false"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textAppearance="?android:attr/textAppearanceMedium" />

   	    <TextView
	        android:id="@+id/select_location_map_info_window_nick_name_label"
	        android:textIsSelectable="false"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
	    
    </LinearLayout>
    

</LinearLayout>